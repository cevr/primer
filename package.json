{
  "name": "@cvr/primer",
  "version": "0.1.1",
  "description": "CLI that renders curated markdown instructions for AI agents",
  "repository": {
    "type": "git",
    "url": "https://github.com/cevr/primer.git"
  },
  "bin": {
    "primer": "./bin/primer"
  },
  "files": [
    "bin",
    "src",
    "tsconfig.json"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build src/main.ts --compile --no-compile-autoload-dotenv --no-compile-autoload-bunfig --outfile bin/primer",
    "postinstall": "bun run build",
    "install:global": "ln -sf $(pwd)/bin/primer $(bun pm bin -g)/primer",
    "uninstall:global": "rm -f $(bun pm bin -g)/primer",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check",
    "check": "bun run typecheck && bun run lint && bun run fmt:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "effect-language-service patch && lefthook install",
    "version": "changeset version",
    "release": "changeset publish"
  },
  "dependencies": {
    "@effect/cli": "^0.73.0",
    "@effect/platform": "^0.94.1",
    "@effect/platform-bun": "^0.87.0",
    "effect": "^3.19.14"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@effect/language-service": "^0.65.0",
    "@effect/platform-node": "^0.104.0",
    "@effect/vitest": "^0.27.0",
    "@types/bun": "^1.2.4",
    "lefthook": "^2.0.15",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.41.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
